cS2016=170
tMS2016=50
cS2017=cS2016+50
tMS2017=tMS2016+20
def mCS2016(cS2016,tMS2016):
    mCS2016=cS2016/tMS2016
    return mCS2016
def mCS2017(cS2017,tMS2017):
    mCS2017=cS2017/tMS2017
    return mCS2017
hesap=mCS2016(cS2016,tMS2016)-mCS2017(cS2017,tMS2017)
